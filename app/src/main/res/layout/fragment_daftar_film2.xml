                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textSize="16sp"
                            android:text="WandaVision"
                            android:textStyle="bold"
                            android:textColor="#FFFCFC"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                        <TextView
