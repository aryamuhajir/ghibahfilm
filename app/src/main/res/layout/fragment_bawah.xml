<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bawah">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="380dp"
        app:cardBackgroundColor="@color/review"
        android:layout_height="90dp"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        android:id="@+id/kartureview"

        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/eko"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namapenilai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/abu"
                        android:textSize="14sp"
                        android:paddingLeft="8dp"
                        android:text="Eko Puji"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_atasbawah"/>
                    <ImageView
                        android:paddingLeft="9dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_reviewkecil"/>

                </FrameLayout>




                <TextView
                    android:id="@+id/penilaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:text="Memiliki alur yang sangat menarik untuk diikuti dan dikemas dengan ciamik"/>


            </LinearLayout>






        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>